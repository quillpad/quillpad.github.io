.landing{display:flex;justify-content:space-evenly;align-items:center;height:90vh}.landing .quillpad{text-align:left;font-size:1.25rem}.landing .quillpad p{padding-bottom:1rem}.landing .quillpad a{background-color:var(--primary);padding:.5rem;border-radius:.5rem;text-decoration:none;color:var(--button);transition:all .25s;font-weight:700;display:flex;justify-content:center;align-items:center}@supports(width:fit-content){.landing .quillpad a{width:fit-content}}.landing .quillpad a svg{height:1rem;vertical-align:-2.5%;fill:var(--button);margin-right:.25rem}.landing .quillpad a:hover{filter:brightness(125%)}.landing img{width:37.5%}@media(max-width:769px){.landing{flex-direction:column;gap:2rem}.landing .quillpad a{width:auto}}@media(max-width:426px){.landing img{width:75%}}.info{display:flex;flex-direction:column}.info a{color:var(--primary)}.info .downloads svg{fill:var(--primary);height:1rem;margin-right:.5rem;vertical-align:-7.5%}.info .about ul{padding-left:.5rem}.info .about ul li{padding:.25rem 0;margin-left:1.5rem}