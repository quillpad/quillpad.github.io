:root{box-sizing:border-box;font-family:inter,sans-serif}@supports(font-variation-settings:normal){:root{font-family:inter var,sans-serif}}@supports(scroll-behavior:smooth){html{scroll-behavior:smooth}}body{background-color:var(--bg);color:var(--text);display:flex;flex-direction:column;justify-content:space-between;height:100vh;margin:0}main{max-width:80vw;width:64rem;margin:auto;text-align:justify}header a,footer a,.info a{text-decoration:none;transition:all .25s;background-image:linear-gradient(currentColor,currentColor);background-position:0 100%;background-repeat:no-repeat;background-size:0% 2px;transition:background-size .3s}header a:hover,header a:focus,footer a:hover,footer a:focus,.info a:hover,.info a:focus{background-size:100% 2px}::-webkit-scrollbar{width:1.25rem}::-webkit-scrollbar-thumb{background:var(--primary);border-radius:.5rem;border:solid .375rem var(--bg)}::selection{background-color:var(--primary);color:var(--button)}::-moz-selection{background-color:var(--primary);color:var(--button)}header{padding:1rem;display:flex;align-items:center;justify-content:space-between}header a{color:var(--text)}header a:hover,header a:focus{color:var(--primary)}header .brand{display:flex;flex-direction:row;gap:.5rem;align-items:center}header .brand img{height:2rem;border-radius:50%}header .brand .title{font-size:1.25rem;font-weight:600;margin:0}header .buttons{display:flex;justify-content:center;align-items:center;gap:1rem}header .buttons button{cursor:pointer;border:none;background:0 0}header .buttons button svg{width:1.25rem;vertical-align:-15%;fill:var(--text);transition:all .25s}header .buttons button svg:hover,header .buttons button svg:focus{fill:var(--primary)}footer{display:flex;justify-content:center;align-items:center;padding:2.5rem}footer table{width:50%;text-align:center}footer table h3{margin:.25rem}footer table a{color:var(--text);margin-bottom:.5rem}footer table a:hover,footer table a:focus{color:var(--primary)}footer table p{margin:0}@media(max-width:426px){footer{padding:2.5rem 0}footer table{width:100%}}body{--primary:#06f;--bg:#fff;--text:#111;--button:#fff}body .moon{display:inline-block}body .sun{display:none}.dark{--primary:#aaf;--bg:#111;--text:#fff;--button:#111}.dark .sun{display:inline-block}.dark .moon{display:none}